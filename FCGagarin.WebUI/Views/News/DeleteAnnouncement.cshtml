@model FCGagarin.WebUI.ViewModels.AnnouncementViewModel

@{
    ViewBag.Title = "Удаление анонса";
}



<div class="jumbotron">
    <h2 class="well">@Html.DisplayFor(modelItem => Model.Title)</h2>
    <p class="h6">
        @Html.Raw(Model.Text)
    </p>
    <div class="pull-right text-muted h6">
        <div>
            @Html.DisplayNameFor(m => m.CreateDate):  @Html.DisplayFor(modelItem => Model.CreateDate)
        </div>
        <div>
            @Html.DisplayNameFor(m => m.AnnouncemetCreator):  @Html.DisplayFor(modelItem => Model.AnnouncemetCreator)
        </div>
    </div>
    <h3><span class="label label-danger">Вы уверены, что хотите удалить этот анонс?</span></h3>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-default">
                <i class="fa fa-check fa-lg"></i>
            </button>
        </div>
    }
</div>
<div>
    @Html.ActionLink(" ", "Announcements", null, new { @class = "btn btn-default fa fa-arrow-left fa-lg" })
</div>
