@model FCGagarin.WebUI.ViewModels.PhotoAlbumViewModel

@{
    ViewBag.Title = "Удаление альбома";
}

<div class="well">
    <div class="h4">
        @Html.DisplayNameFor(m => m.Name): @Html.DisplayFor(m => m.Name)
    </div>
