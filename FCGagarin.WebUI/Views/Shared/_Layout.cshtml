<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div class="row">
            <div  class="col-md-8">
                @Html.ActionLink("ФК ГАГАРИН", "Index", "Home", new { @class = "logo" })
            </div>
            <div id="registerArea" class="col-md-4">
               @Html.Partial("_LoginPartial")
            </div>
        </div>
    </header>

    <div class="wrapper container content">
        <div class="row menu">
            <div class="col-md-3">@Html.ActionLink("Главная", "Index", "Home")</div>
            <div class="col-md-3">@Html.ActionLink("Тренеровки", "Index", "Training")</div>
            <div class="col-md-3">@Html.ActionLink("Информация", "Index", "Info")</div>
            <div class="col-md-3">@Html.ActionLink("Галерея", "Index", "Gallery")</div>
        </div>

        <div class="row">
            <section class="col-md-9">
                @RenderBody()
            </section>
            <aside class="col-md-3">
                <h3>Panel 1</h3>
                <div class="panel">

                </div>
                <h3>Panel 2</h3>
                <div class="panel">

                </div>
            </aside>
        </div>
    </div>

    <footer></footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
